<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.g4.cu_bank.MainActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/TVtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/front_text"
        android:textSize="20pt"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />


    <Button
        android:id="@+id/Bmyaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ma"
        android:layout_above="@+id/Bcreateaccount"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp" />

    <Button
        android:id="@+id/Bcreateaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ca"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/Bexit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exit"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/Bcreateaccount"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
